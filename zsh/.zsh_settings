# ZSH Settings

# EDITOR
export EDITOR='nvim'
export VISUAL='nvim'
export BUNDLER_EDITOR='nvim'

# GREP
export GREP_COLOR='30;42'
export GREP_COLORS='mt=30;42'

# PATH UPDATES
export PATH="/usr/local/heroku/bin:$PATH"
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:opt/X11/bin:$PATH"
export PATH="~/.rbenv/bin:$PATH"

# RBENV
if command -v rbenv &> /dev/null; then
  eval "$(rbenv init -)"
fi

# FZF
export FZF_DEFAULT_OPTS='
  --bind ctrl-f:page-down,ctrl-b:page-up
  --color fg:004,bg:000,hl:202,fg+:214,bg+:031,hl+:202
  --color info:004,prompt:196,spinner:208,pointer:196,marker:208
'
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'

# NVM
nvm() {
    unset -f nvm
    export NVM_DIR=~/.nvm
    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
    nvm "$@"
}

node() {
    unset -f node
    export NVM_DIR=~/.nvm
    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
    node "$@"
}

npm() {
    unset -f npm
    export NVM_DIR=~/.nvm
    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
    npm "$@"
}
